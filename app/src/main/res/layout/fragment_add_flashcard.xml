<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
    <include
        android:id="@+id/toolbar"
        layout="@layout/fragment_toolbar"
        app:layout_constraintStart_toStartOf="parent">
    </include>


    <androidx.cardview.widget.CardView
        android:id="@+id/add_card_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:background="@color/columbia_blue"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@color/columbia_blue"
            android:orientation="vertical">

            <EditText
                android:id="@+id/add_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:inputType="textLongMessage"
                android:fontFamily="@font/poppinssemibold"
                android:minHeight="48dp"
                android:textColor="@color/hookers_green"
                android:text="Question" />

            <EditText
                android:id="@+id/add_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:inputType="textLongMessage"
                android:minHeight="48dp"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/hookers_green"
                android:hint="Answer" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:paddingHorizontal="25dp"
                android:paddingVertical="10dp"
                android:text="Add Card"
                android:textAlignment="center"
                android:backgroundTint="@color/maximum_blue_green"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:cornerRadius="20dp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>
    <include
        android:id="@+id/menu"
        layout="@layout/fragment_menu"
        app:layout_constraintStart_toStartOf="parent">
    </include>
</androidx.constraintlayout.widget.ConstraintLayout>